<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.example.customprogresbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical" >

     <com.example.customprogresbar.RoundProgressBar
        android:id="@+id/ProgressBar1"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#74b94b"
        android_custom:roundWidth="2dip"
        android_custom:textColor="#9A32CD"
         android:layout_marginLeft="200dip"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="18sp" /> 
     <com.example.customprogresbar.RoundProgressBar
        android:id="@+id/ProgressBar2"
        android:layout_width="42dip"
        android:layout_height="42dip"
        
        
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#74b94b"
        android_custom:roundWidth="2dip"
        android_custom:textColor="#9A32CD"
         android:layout_marginLeft="50dip"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="18sp" />
      <com.example.customprogresbar.RoundProgressBar
        android:id="@+id/ProgressBar3"
        android:layout_width="42dip"
        android:layout_height="42dip"
        
        
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#74b94b"
        android_custom:roundWidth="2dip"
        android_custom:textColor="#9A32CD"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="18sp" 
        android:layout_marginLeft="100dip"
        />
       <com.example.customprogresbar.RoundProgressBar
        android:id="@+id/ProgressBar4"
        android:layout_width="42dip"
        android:layout_height="42dip"
        
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#74b94b"
        android_custom:roundWidth="2dip"
        android_custom:textColor="#9A32CD"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="18sp" 
        android:layout_gravity="center"/> 
        
         <com.example.customprogresbar.RoundProgressBar1
        android:id="@+id/ProgressBar5"
        android:layout_width="42dip"
        android:layout_height="42dip"
        
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#74b94b"
        android_custom:roundWidth="2dip"
        android_custom:textColor="#9A32CD"
        android_custom:textIsDisplayable="true"
        android_custom:textSize="18sp" 
       /> 
       

</LinearLayout>